<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:converter="clr-namespace:MeditSolution.Converter;assembly=MeditSolution"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeditSolution.App">
    <Application.Resources>
        <!-- Application resource dictionary -->
         <ResourceDictionary>

         <Color x:Key="backgroundColor">#ffffff</Color>
         <Color x:Key="textColor">Black</Color>
            
         <Color x:Key="backgroundLight">#f4f4f4</Color>
         <Color x:Key="backgroundDark">#e6e6e6</Color>

         <Color x:Key="white">#ffffff</Color>

         <Color x:Key="textLight">#9b9b9b</Color>
         <Color x:Key="textDark">#656565</Color>
         <Color x:Key="lightGray">#d9d9d9</Color>
            
         <Color x:Key="primary">#50e3c2</Color>
         <Color x:Key="primaryDark">#00b092</Color>
         <Color x:Key="primaryBlue">#1facff</Color>

         <converter:BooleanNegateConverter x:Key="BoolNegate" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
